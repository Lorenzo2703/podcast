{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "name": "Podcast"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Author": {
      "type": "string",
      "required": true,
      "default": "Matteo Cavallo"
    },
    "Description": {
      "type": "richtext",
      "required": true
    },
    "Image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    }
  }
}
